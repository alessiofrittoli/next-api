{
	"name": "@alessiofrittoli/next-api",
	"version": "0.1.0-alpha.1",
	"description": "Next.js API utility library",
	"author": {
		"name": "Alessio Frittoli",
		"email": "info@alessiofrittoli.it",
		"url": "https://alessiofrittoli.it"
	},
	"license": "MIT",
	"keywords": [
		"next",
		"next.js",
		"next-server"
	],
	"homepage": "https://github.com/alessiofrittoli/next-api#readme",
	"bugs": {
		"url": "https://github.com/alessiofrittoli/next-api/issues",
		"email": "info@alessiofrittoli.it"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alessiofrittoli/next-api.git"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"scripts"
	],
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		},
		"./error": {
			"types": "./dist/error/index.d.ts",
			"import": "./dist/error/index.mjs",
			"require": "./dist/error/index.cjs"
		},
		"./response": {
			"types": "./dist/response/index.d.ts",
			"import": "./dist/response/index.mjs",
			"require": "./dist/response/index.cjs"
		},
		"./types": {
			"types": "./dist/types/index.d.ts"
		},
		"./types/api": {
			"types": "./dist/types/api.d.ts"
		}
	},
	"sideEffects": false,
	"scripts": {
		"build": "pnpm lint && pnpm test:ci && tsup",
		"lint": "eslint",
		"test": "jest --watchAll --verbose",
		"test:jsdom": "JSDOM=true pnpm test",
		"test:ci": "jest --ci --verbose",
		"test:ci:jsdom": "JSDOM=true pnpm test:ci",
		"test:serve-coverage": "http-server ./coverage/lcov-report --gzip true -p 0 -o --silent",
		"test:coverage": "concurrently --prefix none --kill-others \"pnpm jest --watchAll --verbose --coverage\" \"pnpm test:serve-coverage\"",
		"test:coverage:jsdom": "JSDOM=true pnpm test:coverage",
		"test:jest": "pnpm test jest.test.ts",
		"test:jest:jsdom": "JSDOM=true pnpm test:jest",
		"test:next-response": "pnpm test next-response.test.ts"
	},
	"peerDependencies": {
		"next": ">=14.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.17.0",
		"@jest/globals": "^29.7.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.2",
		"concurrently": "^9.1.0",
		"dotenv": "^16.4.7",
		"eslint": "^9.17.0",
		"globals": "^15.14.0",
		"http-server": "^14.1.1",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"next": ">=14.0.0",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.1"
	},
	"dependencies": {
		"@alessiofrittoli/chain-functions": "^1.0.1",
		"@alessiofrittoli/exception": "^1.2.0",
		"@alessiofrittoli/http-server-status": "^0.1.0",
		"@alessiofrittoli/post-install-scripts": "^0.3.0",
		"@alessiofrittoli/type-utils": "^1.3.0",
		"@alessiofrittoli/url-utils": "^0.1.0"
	}
}
